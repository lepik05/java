package lepikharjutused;

import java.util.Scanner;

public class Harjutus7 {

	public static void main(String[] args) {
		
		
			viga();

	}
	
	public static void viga() {
			Scanner scanner = new Scanner (System.in);
			try {
					System.out.print("pane arv: ");
					int arv1 = scanner.nextInt();
					System.out.print("pane teine arv: ");
					int arv2 = scanner.nextInt();
					
					int s = arv1/arv2;
					System.out.println(s);
			} catch (Exception e) {
					System.out.println("katki!!!");
			}
			System.out.println("töö toimib.");
			viga();
	}

}