package lepikharjutused;

public class Harjutus5 {

	public static void main(String[] args) {
		jagamine();
	}
		
	public static void jagamine() {
			int kordus = 0;
			
			while(kordus < 3) {
					Scanner scanner = new Scanner (System.in);
					System.out.print("pane 1. arv: ");
					int arv1 = scanner.nextInt();
					System.out.print("pane 2. arv: ");
					int arv2 = scanner.nextInt();
				
					if (arv1 >= 0 && arv2 > 0) {
						double tehe = arv1 / arv2;
						System.out.println("Vastus: "+tehe);
						kordus++;
				}
				else {
						System.out.println("Midagi on katki arvudega.");
				}
			}
			
		}
	}